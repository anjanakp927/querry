<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product.field</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='weight_uom_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="area_uom_setting">
                    <div class="o_setting_right_pane">
                        <label for="product_area" string="UOM"/>
                        <div class="text-muted">
                            Define your Area unit
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="product_area" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
